pipeline {
    agent {
        docker { image 'maven:3.9.6-eclipse-temurin-21-alpine'}
    }

    stages {
        stage("Test") {
            steps {
                echo "Test"
                sh 'mvn --version'
                sh 'cd backend && mvn dependency:go-offline && mvn test'
            }
        }
        stage("Build") {
            steps {
                echo "Build"
                sh 'java --version'
            }
        }
        stage("Deploy") {
            steps {
                echo "Deploy"
            }
        }
    }
}