pipeline {
    environment {
        MAVEN_LOCAL_REPO = "${WORKSPACE}/.m2/repository"
    }

    agent {
        docker {
            image 'maven:3.9.6-eclipse-temurin-21-jammy'
            args "-v /var/run/docker.sock:/var/run/docker.sock -v ${JENKINS_HOME}/test_assets/${JOB_NAME}:/ -u 963:965 --env-file ${JENKINS_HOME}/test_assets/${JOB_NAME}/.env.dev-test --network host"
        }
    }

    stages {
        stage("Test") {
            steps {
                echo "Test"
                sh 'cd backend && mvn -Dmaven.repo.local=${MAVEN_LOCAL_REPO} dependency:go-offline test'
            }
        }

        stage("Build") {
            when { expression { env.BRANCH_NAME == 'master' } }

            steps {
                echo "Build"
                sh 'java --version'
            }
        }

        stage("Deploy") {
            when { expression { env.BRANCH_NAME == 'master' } }

            steps {
                echo "Deploy"
            }
        }
    }
}